<TopBar>:
    title: "Equapyzer"
    pos_hint: {"top": 1}
    left_action_items: [["menu", lambda _: app.change_screen()]]


<BackButtons>:
    MDFillRoundFlatIconButton:
        icon: "content-save"
        text: "Save Profile"
        md_bg_color: "#212121"
        pos_hint: {"center_y": .65, "center_x": .42}
        size_hint: [.13, .4]
        on_release: app.save_profile()
    MDFillRoundFlatIconButton:
        icon: "folder-open"
        text: "Load Profile"
        md_bg_color: "#212121"
        pos_hint: {"center_y": .65, "center_x": .58}
        size_hint: [.13, .4]
        on_release: app.load_profile()


<GainSlider>:
    on_active: app.update_filter()
    value: 0
    min: -12
    max: 12
    orientation: 'vertical'


<GainLabel>:
    text: "16Hz"
    halign: "center"
    valign: "top"
